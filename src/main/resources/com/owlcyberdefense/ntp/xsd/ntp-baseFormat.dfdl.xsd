<schema
  xmlns:xs="http://www.w3.org/2001/XMLSchema"
  xmlns="http://www.w3.org/2001/XMLSchema"
  xmlns:fn="http://www.w3.org/2005/xpath-functions"
  xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
  xmlns:ntp="urn:owlcyberdefense.com:schema:dfdl:ntp:ntp"
  targetNamespace="urn:owlcyberdefense.com:schema:dfdl:ntp:ntp">

  <include schemaLocation="/org/apache/daffodil/xsd/DFDLGeneralFormat.dfdl.xsd" />

  <annotation>
    <appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:defineFormat name="baseFormat">
      <dfdl:format ref="ntp:GeneralFormat"
                   representation="binary"
                   byteOrder="bigEndian"
                   bitOrder="mostSignificantBitFirst"
                   encoding="ASCII"
				   lengthKind='implicit'
				   lengthUnits='bits'
                   alignmentUnits="bits"
                   alignment="1"
                   occursCountKind="expression"
                   binaryNumberRep="binary"/>
      </dfdl:defineFormat>
    </appinfo>
  </annotation>
  
</schema>
